{
  "title": "Option to Command for Cut/Copy/Paste",
  "rules": [
    {
      "description": "Option+X to Command+X (Cut)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "x",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Option+C to Command+C (Copy)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Option+V to Command+V (Paste)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    }
  ]
}
