# ghostty config

# ----------------------------------------------------------------
# Font
# ----------------------------------------------------------------
# font-family = JetBrainsMonoNL Nerd Font Mono
# font-feature = -dlig
font-size = 16

# ----------------------------------------------------------------
# Color
# ----------------------------------------------------------------
background = #0A1731
foreground = #BFEFEC
background-opacity = 0.98
selection-clear-on-typing = true
selection-clear-on-copy = false

# ----------------------------------------------------------------
# Window
# ----------------------------------------------------------------
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
window-height = 48
window-width = 144

# ----------------------------------------------------------------
# Cursor
# ----------------------------------------------------------------
cursor-style = bar
cursor-style-blink = true
cursor-invert-fg-bg = true
cursor-opacity = 0.8
